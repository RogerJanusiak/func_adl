{
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.testing.promptToConfigure": false,
    "python.testing.pytestEnabled": true,
    "python.linting.flake8Enabled": true,
    "cSpell.words": [
        "AST's",
        "Dlib",
        "Jupyter",
        "LINQ",
        "ROOTT",
        "asts",
        "asyncio",
        "codecov",
        "gwatts",
        "iscoroutine",
        "localds",
        "nargs",
        "noqa",
        "numpy",
        "pytest",
        "xaod",
        "xrootd"
    ],
    "python.linting.flake8Args": [
        "--ignore=E501",
        "--exclude=tests/*"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        "tests/**"
    ]
}